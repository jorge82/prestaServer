<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="styles.css">
    <title>Conections</title>
  
</head>
<body>  
    
 
    <div  class="topnav">
    
        <h3 id="title"> Connections</h3>
    
        <ul id=”button”>
            <li><a href="/">Home</a></li>
            <li><a href="/connections">Connections</a></li>
            <li><a href="/amoconnections">AmoCrm connections</a></li>
            <li><a href="/users">Users</a></li>
            <li><a href="/addresses">Addresses</a></li>
            <li><a href="/orders">Orders</a></li>
            <li><a href="/amoContacts">amoContacts</a></li>
            <li><a href="/combined">Combined</a></li>
        
        
             
        </ul>
        
  </div>
    <% if ( message ) { %>
        <% if ( message.type == 'error' ) { %>
            <h4 class="error"> <%= message.text %> </h4>
        <% } %>
        <% if ( message.type == 'success' ) { %>
            <h4 class="success"> <%= message.text %> </h4>
        <% } %>
      <% } %>
    <div>
        <form name="formConection" method='POST' action="/connections">
            <input type="text" id="tag" name='tag' placeholder="insert tag"><br>
            <input type="text" id="url" name='url' placeholder="insert url"><br>
            <input type="text" id="token" name='token' placeholder="insert the token" ><br>
            <input type="submit" value="Add prestashop connection"><br>
        </form>
    </div>
    <div>
        <table>
            <th>Tag</th>
            <th>Url</th>
            <th>Token</th>
            <th>Action</th>

            <% for(var i=0; i<conections.length; i++){ %>
                <tr>
                    <td><%=conections[i].tag  %> </td>
                    <td><%=conections[i].url %> </td>
                    <td> <%=conections[i].token %> </td>
                    <td> 
                        <!-- <a class='editButton' href="/conections/edit/<%=i %>"  >Editar</a>  -->
                        <a class="deleteButton" href="/connections/delete/<%=conections[i].tag %>"  >Quitar</a>
                    </td>
                    
                </tr>
                <% } %>
         
            
        </table>

    </div>



    
</body>
</html>
